<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
   <style name="Theme.Habit_blue" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_habit_blue</item>
        <item name="popupMenuStyle">@style/PopupMenu.Habit_blue</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Habit_blue</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Habit_blue</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Habit_blue</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Habit_blue</item>
        <item name="actionModeBackground">@drawable/cab_background_top_habit_blue</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_habit_blue</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Habit_blue</item>

        
    </style>

    <style name="ActionBar.Solid.Habit_blue" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_habit_blue</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_habit_blue</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_habit_blue</item>
        <item name="progressBarStyle">@style/ProgressBar.Habit_blue</item>
        <item name="android:textColor">@color/holo_blue_light</item>
    </style>

    <style name="ActionBar.Transparent.Habit_blue" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_habit_blue</item>
        <item name="progressBarStyle">@style/ProgressBar.Habit_blue</item>
    </style>
	
    <style name="PopupMenu.Habit_blue" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_habit_blue</item>	
    </style>
	
    <style name="DropDownListView.Habit_blue" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_habit_blue</item>
    </style>

    <style name="ActionBarTabStyle.Habit_blue" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_habit_blue</item>
    </style>
	
    <style name="DropDownNav.Habit_blue" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_habit_blue</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_habit_blue</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_habit_blue</item>
    </style>
    
    <style name="ProgressBar.Habit_blue" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_habit_blue</item>
    </style>
    
    <style name="ActionButton.CloseMode.Habit_blue" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_habit_blue</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Habit_blue.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Habit_blue</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Habit_blue</item>
    </style>
    
</resources>
